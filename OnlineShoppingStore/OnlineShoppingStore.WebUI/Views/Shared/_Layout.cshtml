<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Shopping Store</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Online Shopping Store</a>
    </div>
    <div class="row panel">
        <div id="categories" class="col-lg-3">
            @Html.Action("Menu", "Navs")   <!-- 显示NavsController里Menu Action的返回值-->
        </div>
        <div class="col-lg-7">
            @RenderBody()   <!-- 显示任何使用这个Layout的View里的内容-->
        </div>
    </div>
 
</body>
</html>